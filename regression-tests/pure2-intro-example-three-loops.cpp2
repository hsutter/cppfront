
print: (thing:_) =
    std::cout << ">> " << thing << "\n";

decorate_and_print: (inout thing:_) = {
    thing = "[" + thing + "]";
    print(thing);
}

main: () -> int = {
    words: std::vector<std::string> =
        ( "hello", "big", "world" );
    view: std::span<std::string> = words;

    i := new<int>(0);
    while i* < view.ssize() next i*++ {
        print( view[i*] );
    }

    do {
        std::cout << std::setw(4) << "**";
    } next i*-- while i*>0;

    std::cout << "\n";
    for words do (inout word)
        decorate_and_print(word);

    print( : std::string = "end of program" );
}

