
main: () =
{
    v: std::variant<int, double> = 42.0;
    a: std::any = "xyzzy";
    o: std::optional<int> = ();

    test_generic(3.14);
    test_generic(v);
    test_generic(a);
    test_generic(o);

    std::cout << "\n";

    v = 1;
    a = 2;
    o = 3;
    test_generic(42);
    test_generic(v);
    test_generic(a);
    test_generic(o);
}

test_generic: ( x: _ ) = {
    msg: std::string = typeid(x).name();
    msg += " is int? ";
    print( msg, x is int );
}

print: ( msg: std::string, b: bool ) = {
    bmsg: * const char;
    if b { bmsg = "true";  }
    else { bmsg = "false"; }
    std::cout << std::setw(40) << msg << bmsg << "\n";
}

