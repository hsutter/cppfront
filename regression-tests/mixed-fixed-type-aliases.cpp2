#include <filesystem>
#include <iostream>
#include <typeinfo>

namespace my {
    using u16 = float;
}

test: (x:_) = {
    std::cout
        << std::is_floating_point_v<CPP2_TYPEOF(x)> as std::string
        << "\n";
}

mytype: @struct <T> type = {
    myvalue: <U> bool == true;
}

main: (args) -> int = {
    y: my::u16 = 42;
    test(y);

    z: u16 = 42;
    test(z);

    for args do (arg)
        std::cout << std::filesystem::path(arg).filename() << "\n";

    std::cout << "(mytype<int>::myvalue<int>)$\n";
}
