#include <vector>
#include <string>
#include <span>
#include <algorithm>
#include <iostream>

main: () = {
    vec: std::vector<std::string> 
            = ("hello", "2022");
    view: std::span = vec;

    //  Passing a function expression
    std::for_each(
        view.begin(),
        view.end(),
        :(inout x:_) = x += "-ish";
    );

    //  Initializating from a function expression
    callback := :(inout x:_) = x += " maybe";
    std::for_each(
        view.begin(),
        view.end(),
        callback
    );

    for view do :(str:_) = {
        std::cout << str << "\n";
    }
}
