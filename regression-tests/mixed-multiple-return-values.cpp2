
#include <iostream>
#include <random>
#include <string>

f: () -> (i: int, s: std::string) = {
    //  note: i and s are uninitialized!

    i = 10;

    // the standard mandates that std::mt19937()() == 3499211612
    if std::mt19937()()%2 == 0 {
        s = "xyzzy";
    }
    else {
        s = "plugh";
    }

    return;
}

print: (name: std::string, value:_)
    = std::cout << name << " is " << value << "\n";

int main() {
    auto [a,b] = f();
    print("a", a);
    print("b", b);
}
