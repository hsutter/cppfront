
#include <iostream>
#include <random>
#include <string>

f: () -> (i: int, s: std::string) = {
    //  note: i and s are uninitialized!

    i = 10;

    // the standard mandates that std::mt19937()() == 3499211612
    if flip_a_coin() {
        s = "xyzzy";
    }
    else {
        s = "plugh";
    }

    return;
}

do_print: (name: std::string, value:_)
    = std::cout << name << " is " << value << "\n";

int main() {
    auto [a,b] = f();
    do_print("a", a);
    do_print("b", b);
}

bool flip_a_coin() {
    // Change std::mt19937 to std::random_device for non-deterministic PRNG
    static std::mt19937 rand;
    return rand() % 2 == 0;
}
